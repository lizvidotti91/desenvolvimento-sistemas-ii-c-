@model moveis_planejados.Models.Venda

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Venda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendaId" />
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StatusVenda" class="control-label"></label>
                <select asp-for="StatusVenda" class="form-control" asp-items="@ViewBag.StatusVenda"></select>
                <span asp-validation-for="StatusVenda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovelId" class="control-label"></label>
                <select asp-for="MovelId" class="form-control" asp-items="ViewBag.MovelId"></select>
                <span asp-validation-for="MovelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuncionarioId" class="control-label"></label>
                <input asp-for="FuncionarioId" class="form-control" />
                <span asp-validation-for="FuncionarioId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-secondary" asp-action="Index">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
